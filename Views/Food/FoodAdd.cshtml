@{
    ViewData["Title"] = "food ekle";
    Layout = "_Layout";
}
@model CoreAndFood.Data.Models.Food



    <div>

        <h2>food add page</h2>

        <form action="#" method="post">

            <p>adı: </p>
            <input type="text" class="form-control" name="FoodName" required />


            <p> stock: </p>
